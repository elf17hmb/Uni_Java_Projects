<?xml version="1.0" encoding="utf-8"?>
<!-- propertydetails.xml. -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent">
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
    <TextView android:id="@+id/propertyTitle"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textSize="24dp">
    </TextView>
    <ImageView android:id="@+id/propertyImage"
        android:contentDescription="@string/property_image"
		android:layout_gravity="center"
		android:layout_height="300dp"
		android:layout_width="300dp"></ImageView>
    <TableLayout android:id="@+id/propertyFeatureTable"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"></TableLayout>
    <TextView android:id="@+id/propertyDescription"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"></TextView>
  </LinearLayout>
</ScrollView>
